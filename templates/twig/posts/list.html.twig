{% extends "layouts/layout.html.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Meus posts</h1>
            <a class="btn btn-primary" href="/admin/posts/create">Criar post</a>
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Ações</th>
                </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                        <tr>
                            <td> {{ post.id }} </td>
                            <td> {{ post.title }} </td>
                            <td>
                                <a href="/admin/posts/edit/{{ post.id }}">
                                    Editar
                                </a>|
                                <a href="/admin/posts/delete/{{ post.id }}">
                                    Excluir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}            
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}